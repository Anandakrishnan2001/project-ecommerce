<script>
    let chartInstance;

async function fetchOrdersData(timePeriod) {
    const url = `/admin/dashboardgraphdata?timePeriod=${timePeriod}`;
    const response = await fetch(url);
    const data = await response.json();
    console.log(data, 'data is coming');

    if (response.ok) {
        const labels = [];
        const ordersData = [];
        const currentDate = new Date();

        if (timePeriod === 'weekly') {
            // Prepare labels and ordersData for the current week
            const daysOfWeek = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
            const startOfWeek = new Date(currentDate.getTime() - currentDate.getDay() * 24 * 60 * 60 * 1000);
            for (let i = 0; i < 7; i++) {
                const date = new Date(startOfWeek.getTime() + i * 24 * 60 * 60 * 1000);
                const dayName = daysOfWeek[date.getDay()];
                labels.push(dayName);
                ordersData.push(0); // Initialize ordersData with 0
            }

            data.forEach(d => {
                const date = new Date(d.label);
                const dayIndex = date.getDay();
                const index = labels.indexOf(daysOfWeek[dayIndex]);
                if (index !== -1) {
                    ordersData[index] = d.count;
                }
            });
        } else if (timePeriod === 'monthly') {
            // Prepare labels and ordersData for the current month
            const monthNames = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
            const currentMonth = currentDate.getMonth();
            const currentYear = currentDate.getFullYear();

            // Generate labels for all months
            for (let i = 0; i < 12; i++) {
                labels.push(monthNames[i]);
                ordersData.push(0); // Initialize ordersData with 0
            }

            // Update ordersData for the current month
            data.forEach(d => {
                const date = new Date(d.label);
                const month = date.getMonth();
                if (month === currentMonth) {
                    const index = labels.indexOf(monthNames[month]);
                    if (index !== -1) {
                        ordersData[index] = d.count;
                    }
                }
            });
        } else if (timePeriod === 'yearly') {
            // Prepare labels and ordersData for yearly data
            const currentYear = new Date().getFullYear();
            for (let i = 0; i < 5; i++) {
                const year = currentYear + i;
                labels.push(year);
                ordersData.push(0); // Initialize ordersData with 0 for future years
            }

            data.forEach(d => {
                const year = new Date(d.label).getFullYear();
                const index = labels.indexOf(year);
                if (index !== -1) {
                    ordersData[index] = d.count;
                }
            });
        }

        return { ordersData, labels };
    } else {
        throw new Error(data.error);
    }
}

