    <script>
    const loadforgototp = async (event) => {
        event.preventDefault();
    
        const email = document.getElementById('email').value;
    
        try {
            const response = await fetch('/check-email', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ email: email })
            });
    
            const data = await response.json();
            console.log('Response data:', data); 
    
          
            if (data.message ==='Email not found') {
                const emailError = document.getElementById('emailError');
                if (emailError) {
                    emailError.innerHTML = `<h4>${data.message}</h4>`;
                } else {
                    console.error('Email error container not found');
                }
            } else {
                console.log('No message from server');
            }
    
            if (data.message === 'Email sent successfully') {
                window.location.href = '/forgottenotp';
            }
        } catch (error) {
            console.error('Error:', error);
        }
    };
    
    document.getElementById('forgotPasswordForm').addEventListener('submit', loadforgototp);
    
</script>





