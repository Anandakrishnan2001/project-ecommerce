 /**
 * Generates an Excel file from a table element
 */
function generateExcel() {
  const tableElement = document.querySelector('.table');
  const workbook = XLSX.utils.book_new();
  const worksheet = XLSX.utils.table_to_sheet(tableElement);

  // Apply styling to each cell in the worksheet
  const worksheetRange = XLSX.utils.decode_range(worksheet['!ref']);
  for (let rowIndex = worksheetRange.s.r; rowIndex <= worksheetRange.e.r; rowIndex++) {
    for (let columnIndex = worksheetRange.s.c; columnIndex <= worksheetRange.e.c; columnIndex++) {
      const cellAddress = XLSX.utils.encode_cell({ r: rowIndex, c: columnIndex });
      const cell = worksheet[cellAddress];
      if (cell) {
        cell.s = getCellStyle();
      }
    }
  }

  // Add the worksheet to the workbook and write the file
  XLSX.utils.book_append_sheet(workbook, worksheet, 'Sales Report');
  XLSX.writeFile(workbook, 'sales-report.xlsx');
}

/**
 * Returns a cell style object with default font, alignment, and border settings
 */
function getCellStyle() {
  return {
    font: { name: 'Arial', sz: 7 },
    alignment: { horizontal: 'center', vertical: 'center', wrapText: true },
    border: {
      top: { style: 'thin' },
      bottom: { style: 'thin' },
      left: { style: 'thin' },
      right: { style: 'thin' },
    },
  };
}
