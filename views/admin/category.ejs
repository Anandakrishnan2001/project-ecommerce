                        <span class="text">Products</span>
                    </a>
                </li>
            </ul>
        </nav>
    </aside>
    <!-- Main Content -->
    <main class="main-wrap">
        <section class="content-main">
            <div class="content-header d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="content-title card-title">Categories</h2>
                    <p>Add, edit, or delete a category</p>
                </div>
                <div class="text-center w-100">
                    <div class="d-flex justify-content-between align-items-center">
                        <input type="text" placeholder="Search Categories"
                            class="form-control bg-white mb-3 ml-30 d-inline-block"
                            style="width: 50%; margin-top: 10px; padding-top: 5px;">
                        <button class="btn btn-primary ms-3" data-bs-toggle="modal"
                            data-bs-target="#addCategoryModal">Add Category</button>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <!-- Table header -->
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th>Action</th> <!-- Added the Action column -->
                                </tr>
                            </thead>
                            <!-- Table body -->
                            <tbody>
                                <% categories.forEach(category=> { %>
                                    <tr>
                                        <td><b>
                                                <%= category.name %>
                                            </b></td>
                                        <td>
                                            <span
                                                class="badge <%= category.status === 'active' ? 'bg-success' : 'bg-danger' %>">
                                                <%= category.status %>
                                            </span>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-outline-primary btn-sm me-2"
                                                onclick="openEditModal('<%= category._id %>','<%= category.name %>','<%= category.status %>')">Edit</button>
                                            <button type="button" class="btn btn-outline-danger btn-sm"
                                                onclick="deleteCategory('<%= category._id %>')">Delete</button>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div> <!-- .card-body -->
            </div> <!-- .card -->
        </section>



        <!-- Add Category Modal -->
        <div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addCategoryModalLabel">Add Category</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <label for="categoryName">Category Name:</label>
                        <input type="text" id="categoryName" class="form-control" placeholder="Enter category name">
                        <div class="btn-group mt-3" role="group" aria-label="Category Status">
                            <button type="button" class="btn btn-success active" id="activeStatusBtn"
                                onclick="toggleCategoryStatus('active')">Active</button>
                            <button type="button" class="btn btn-danger" id="inactiveStatusBtn"
                                onclick="toggleCategoryStatus('inactive')">Inactive</button>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" onclick="addCategory()">Add Category</button>
                    </div>
                </div>
            </div>
        </div>




        <!-- Edit Category Modal -->
        <div class="modal fade" id="editCategoryModal" tabindex="-1" aria-labelledby="editCategoryModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editCategoryModalLabel">Edit Category</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <label for="newCategoryName">New Category Name:</label>
                        <input type="text" id="newCategoryName" class="form-control"
                            placeholder="Enter new category name">
                        <label for="newCategoryStatus">New Category Status:</label>
                        <select id="newCategoryStatus" class="form-select">
                            <option value="active">Active</option>
                            <option value="inactive">Inactive</option>
                        </select>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" onclick="saveEditedCategory()">Save
                            Changes</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Delete Category Modal -->
        <div class="modal fade" id="deleteCategoryModal" tabindex="-1" aria-labelledby="deleteCategoryModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteCategoryModalLabel">Delete Category</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this category?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-danger" onclick="confirmDeleteCategory()">Delete</button>
                    </div>
                </div>
            </div>
        </div>


        <!-- JavaScript Imports -->
        <script src="/admin_assets/js/vendors/jquery-3.6.0.min.js"></script>
        <script src="/admin_assets/js/vendors/bootstrap.bundle.min.js"></script>
        <!-- Add more JavaScript imports if needed -->
        <!-- Main Script -->
        <script src="/admin_assets/js/main.js" type="text/javascript"></script>

        <script>
            // Edit Category Function
            function openEditModal(categoryId, categoryName, categoryStatus) {
                document.getElementById('newCategoryName').value = categoryName;
                document.getElementById('newCategoryStatus').value = categoryStatus;

                // Open the modal
                var myModal = new bootstrap.Modal(document.getElementById('editCategoryModal'), {
                    keyboard: false
                });
                myModal.show();
            }

            // Save Edited Category Function
            async function saveEditedCategory() {
                const categoryId = document.getElementById('categoryId').value;
                const newName = document.getElementById('newCategoryName').value;
                const newStatus = document.getElementById('newCategoryStatus').value;
            

                try {
                    const response = await fetch(`/admin/editCategory/${categoryId}`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            name: newName,
                            status: newStatus
                        })
                    });

                    if (response.ok) {
                        window.location.href = '/admin/category'; // Redirect to category page
                    } else {
                        throw new Error('Failed to save changes.');
                    }
                } catch (error) {
                    console.error(error);
                }
            }

            // Delete Category Function
            async function deleteCategory(id) {
                // You can implement modal confirmation here if needed
                confirmDeleteCategory(id); // Assuming id is passed as a parameter
            }

            // Confirm Delete Category Function
            async function confirmDeleteCategory(id) {
                try {
                    const response = await fetch(`/admin/deleteCategory/${id}`, {
                        method: 'DELETE'
                    });

                    if (!response.ok) {
                        throw new Error('Category could not be deleted.');
                    }

                    // Update UI here without reloading the page
                    const categoryRow = document.getElementById(`category-${id}`);
                    categoryRow.remove();
                } catch (error) {
                    console.error('Error:', error);
                }
            }

            // Toggle Button Functionality
            function toggleCategoryStatus(status) {
                const activeBtn = document.getElementById('activeStatusBtn');
                const inactiveBtn = document.getElementById('inactiveStatusBtn');

                if (status === 'active') {
                    activeBtn.classList.add('active');
                    inactiveBtn.classList.remove('active');
                } else if (status === 'inactive') {
                    activeBtn.classList.remove('active');
                    inactiveBtn.classList.add('active');
                }
            }


            // Add Category Function
            async function addCategory() {
                const categoryName = document.getElementById('categoryName').value;
                const categoryStatus = document.querySelector('.btn-group .active').textContent.toLowerCase();

                try {
                    const response = await fetch('/admin/addCategory', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ name: categoryName, status: categoryStatus })
                    });

                    if (!response.ok) {
                        throw new Error('Category could not be added.');
                    }

                    // Redirect to the category page after adding
                    window.location.href = '/admin/category';
                } catch (error) {
                    console.error('Error:', error);
                }
            }

        </script>