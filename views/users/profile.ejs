                                                                        <form action="/cancel-order/<%= order._id %>" method="POST" class="mr-2 mb-4"
                                                                            style="display: inline;">
                                                                            <button class="btn btn-danger btn-sm cancelOrderBtn" type="submit"
                                                                                data-order-id="<%= order._id %>">Cancel Order</button>
                                                                        </form>
                                    
