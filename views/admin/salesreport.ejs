              <% order.items.forEach((item, index) => { %>
              <tr class="order-row" data-order-index="<%= orderIndex %>">
                <% if (index === 0) { %>
                <td rowspan="<%= order.items.length %>"><%= ++orderIndex %></td>
                <td rowspan="<%= order.items.length %>"><%= order.user.username %></td>
                <td rowspan="<%= order.items.length %>"><%= order.user.email %></td>
                <% } %>
                <td><%= item.productId.name %></td>
                <td><%= item.quantity %></td>
                <td><%= item.productId.price %></td>
                <td><%= item.Status %></td>
                <% if (index === 0) { %>
                <td rowspan="<%= order.items.length %>"><%= order.billTotal %></td>
                <td rowspan="<%= order.items.length %>"><%= order.orderDate.toLocaleDateString() %></td>
                <td rowspan="<%= order.items.length %>"><%= order.couponName %></td>
