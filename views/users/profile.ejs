                                                <div class="alert alert-info" role="alert">
                                                    Your order history is empty.
                                                </div>
                                                <% } else { %>
                                                <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                                                    <table class="table" style="border-color: #000;">
                                                        <thead>
                                                            <tr class="text-center" style="border-color: #000;">
                                                                <th style="width: 10%; border-color: #000;">Order</th>
                                                                <th style="width: 10%; border-color: #000;">Date</th>
                                                                <th style="width: 10%; border-color: #000;">Status</th>
                                                                <th style="width: 10%; border-color: #000;">Total</th>
                                                                <th style="width: 10%; border-color: #000;">Count</th>
                                                                <th style="width: 1%; border-color: #000;">Product</th>
                                                                <th style="width: 20%; border-color: #000;">Actions</th>
                                                                <th style="width: 1%; border-color: #000;">Details</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% orders.forEach(order => { %>
                                                            <tr class="text-center" style="font-size: xx-small; border-color: #000;">
                                                                <td rowspan="1" style="border-color: #000;">
                                                                    <h5>
                                                                        <% order.items.forEach((item) => { %>
                                                                        <ul>
                                                                            <li><%= item.title %></li>
                                                                        </ul>
                                                                        <% }) %>
                                                                    </h5>
                                                                </td>
                                                                <td rowspan="1" style="border-color: #000;">
                                                                    <h5><%= order.orderDate.toDateString() %></h5>
                                                                </td>
                                                                <td rowspan="1" style="border-color: #000;">
                                                                    <h5><%= order.orderStatus %></h5>
                                                                </td>
                                                                <td rowspan="1" style="border-color: #000;">
                                                                    <h5>₹<%= order.billTotal %></h5>
                                                                </td>
                                                                <td rowspan="1" style="border-color: #000;">
                                                                    <h5><%= order.items.length %></h5>
                                                                </td>
                                                                <td style="border-color: #000;">
